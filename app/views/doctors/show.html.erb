<div class="container pt-5">
  <div class="row">
    <div class="col-md-5">
      <%= avatar_image_tag(@doctor.avatar) %>
    </div>
    <div class="col-md-4">
      <h4><%= @doctor.name %></h4>
      <div class="col-md-8">
        <% if @doctor.details["education"].present? %>
          <p><strong>Education:</strong> <%= @doctor.details["education"] %></p>
        <% end %>
        <% if @doctor.details["experience"].present? %>
          <p><strong>Experience:</strong> <%= @doctor.details["experience"] %></p>
        <% end %>
        <% if @doctor.details["biography"].present? %>
          <p><%= @doctor.details["biography"] %></p>
        <% end %>
      </div>
      <%= render partial: "appointments/make_an_appointment", locals: { doctor: @doctor } if patient? %>
    </div>
  </div>
</div>
