<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: "form-signin"}) do |f| %>
  <%= render "users/shared/error_messages", resource: resource %>

  <div class="form-floating">
    <%= f.label :name %><br />
    <%= f.text_field :name, class: "form-control", autofocus: true, autocomplete: "name", required: true %>
  </div>

  <div class="form-floating">
    <%= f.label :phone_number %><br />
    <%= f.text_field :phone_number, class: "form-control", autofocus: true, autocomplete: "phone-number", required: true %>
  </div>

  <div class="form-floating">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, class: "form-control", autocomplete: "new-password", required: true %>
  </div>

  <div class="form-floating">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, class: "form-control", autocomplete: "new-password", required: true %>
  </div>

  <%= f.hidden_field :type, value: "Patient" %>

  <div class="text-center">
    <%= f.submit "Sign up", class: "btn btn-primary" %>
  </div>
<% end %>

<%= render "users/shared/links" %>
