<div class="container pt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <h2 class="text-center mb-4">Sign up</h2>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "users/shared/error_messages", resource: resource %>

        <div class="form-group">
          <%= f.label :name, class: 'sr-only' %>
          <%= f.text_field :name, class: 'form-control form-control-lg', autofocus: true, placeholder: 'Name' %>
        </div>

        <div class="form-group">
          <%= f.label :phone_number, class: 'sr-only' %>
          <%= f.text_field :phone_number, class: 'form-control form-control-lg', autofocus: true, placeholder: 'Phone number (e.g. +380-67-78-7826)' %>
        </div>

        <div class="form-group">
          <%= f.label :password, class: 'sr-only' %>
          <% if @minimum_password_length %>
            <small class="form-text text-muted mb-2">(<%= @minimum_password_length %> characters minimum)</small>
          <% end %>
          <%= f.password_field :password, class: 'form-control form-control-lg', autocomplete: "new-password", placeholder: 'Password' %>
        </div>

        <div class="form-group">
          <%= f.label :password_confirmation, class: 'sr-only' %>
          <%= f.password_field :password_confirmation, class: 'form-control form-control-lg', autocomplete: "new-password", placeholder: 'Password confirmation' %>
        </div>

        <%= f.hidden_field :type, value: "Patient" %>


        <div class="form-group pt-3 d-flex justify-content-between">
          <%= f.submit "Sign up", class: 'btn btn-primary btn-lg' %>
        </div>      
      <% end %>
    </div>
  </div>
</div>
